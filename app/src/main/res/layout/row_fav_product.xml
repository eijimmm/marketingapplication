<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/IV_ModelProdImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_store_24" />

        <TextView
            android:id="@+id/TV_ModelProdName"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/IV_ModelProdImage"
            android:text="Name"
            android:textColor="@color/design_default_color_primary_dark" />

        <TextView
            android:id="@+id/TV_ModelDiscountedPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/TV_ModelProdName"
            android:text="RM10.00"
            android:textColor="@color/gray02"/>

        <TextView
            android:id="@+id/TV_ModelOriginalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TV_ModelProdName"
            android:layout_toEndOf="@id/TV_ModelDiscountedPrice"
            android:text="RM10.00"
            android:textColor="@color/gray02" />

        <TextView
            android:id="@+id/TV_DiscountNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect05"
            android:padding="5dp"
            android:text="10% OFF"
            android:textColor="@color/green" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>